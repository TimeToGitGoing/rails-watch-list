<div class="container">
  <h2><strong><%= @movie.title %></strong></h2>
  <h3><%=  @movie.rating %>/10 </h3>
  <p><%=   @movie.overview %></p>
  <p><%=   @movie.poster_url %></p>

  <div>
    <%= link_to 'Edit movie', edit_movie_path(@movie) %> <br>
    <%= link_to "Back to all movies", movies_path %> <br>
    <%= link_to "Delete",
      movie_path(@movie),
      data: {turbo_method: :delete, turbo_confirm: "Are you VERY sure?"}
    %>
  </div>
</div>
