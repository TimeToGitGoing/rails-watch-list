<h2><%= @list.name %></h2>

<% @list.bookmarks.each do |bookmark| %>
    <img src=<%= bookmark.movie.poster_url %> alt=“”>
    <p><%= bookmark.movie.title %></p>
    <p><%= bookmark.movie.overview %></p>
    <p><%= bookmark.movie.rating %></p>
    <p><%= bookmark.comment %></p>
    <%= link_to "Delete this bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %>


<%= link_to "Bookmark a movie", new_list_bookmark_path(@list) %> <br>
<%= link_to "Back to lists", lists_path %>
